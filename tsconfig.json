{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "mapRoot": "/assets/typescripts",
    "sourceRoot": "./assets/typescripts",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "node_modules/@types/node/*",
        "node_modules/typedoc/node_modules/typescript/lib/lib.dom.d"
      ]
    },
    "skipLibCheck": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch":true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "project/target",
    "typings/main",
    "typings/main.d.ts",
    "typings/browser",
    "target/web"
  ]
}